@import "../../common/vendor.wxss";

.form-control {
  display: block;
  padding: 0 24rpx;
  margin-bottom: 10rpx;
  border: 2rpx solid #ccc;
}
.counter {
  display: inline-block;
  margin: 20rpx auto;
  padding: 10rpx 20rpx;
  color: #2d8cf0;
  border: 2rpx solid 2d8cf0;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.noticeBar.i-noticebar {
  font-size: 24rpx;
}
.auntResult {
  padding: 10rpx;
}
.auntItem {
  position: relative;
}
.auntResult .auntItem {
  padding: 10rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
  border-bottom: 2rpx solid #f8f8f8;
  display: block;
  overflow: hidden;
}
.auntItem .aunt-avatar {
  height: 180rpx;
  overflow: hidden;
}
.auntBtn {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
}
.auntBtn ._button {
  font-size: 24rpx !important;
  height: 60rpx;
  line-height: 60rpx;
  box-shadow: inset 0 0 0 2rpx rgba(0, 0, 0, 0.1);
  color: #2d8cf0;
  background-color: #fff !important;
  touch-action: manipulation;
}
.auntBtn .button-hover {
  box-shadow: inset 0 0 0 2rpx #2d8cf0;
}
.auntKind {
  text-align: left;
  padding: 30rpx 0;
  background: #f8f8f9;
  position: absolute;
  display: flex;
  justify-content: space-around;
  width: 100%;
  z-index: 2;
  overflow: hidden;
}
.auntKind .tag {
  padding: 8rpx 40rpx;
}
.auntKind .active-tag {
  color: #fff;
  background: #2d8cf0;
  border-color: #2d8cf0;
}
.flex-wrp .item-col {
  line-height: 60rpx;
}
.modal-btn {
  position: flex;
}
.showSelect {
  display: none;
}