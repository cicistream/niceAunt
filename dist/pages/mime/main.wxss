@import "../../common/vendor.wxss";

.mine-avatar {
  line-height: 120rpx;
  height: 140rpx;
  margin: 10rpx 0;
  padding: 10rpx 60rpx;
  background: #fff;
  overflow: hidden;
}
.mine-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 1998rpx;
  float: left;
}
.mine-avatar .name {
  margin-left: 40rpx;
  line-height: 120rpx;
  float: left;
}
.mine-block {
  margin: 20rpx 0;
  background: #fff;
  line-height: 100rpx;
}
.mine-block ._p {
  padding: 0 40rpx;
  position: relative;
  border-bottom: 2rpx solid #e9eaec;
}
.mine-block:last-child {
  border-bottom: 0;
}
.mine-block .auntBtn {
  position: fixed;
  right: 40rpx;
}